{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=milkingyield.db;Port=5432;Database=milkingdb;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Kafka": {
    "BootstrapServers": "kafka:29092",
    "GroupId": "milking-yield-group",
    "AutoOffsetReset": "Earliest",
    "Topics": {
      "CattleEvents": "cattle-events",
      "MilkingEvents": "milking-events"
    }
  },
  "Keycloak": {
    "Authority": "http://auth-server:8080/realms/microservices",
    "Issuer": "http://localhost:7003/realms/microservices",
    "Audience": "account",
    "ClientId": "milkingyield-service",
    "ClientSecret": "your-client-secret"
  },
  "CattleApi": {
    "BaseUrl": "http://cattlemanagement.api:8080"
  }
}
