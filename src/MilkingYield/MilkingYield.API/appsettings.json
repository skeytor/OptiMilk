{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MilkingYieldDatabase": "Host=milkingyield.db;Port=5432;Database=milkingdb;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Kafka": {
    "BootstrapServers": "kafka:29092",
    "GroupId": "milking-yield-group",
    "AutoOffsetReset": "Earliest",
    "Topics": {
      "CattleEvents": "cattle-events",
      "MilkingEvents": "milking-events"
    }
  },
  "CattleApi": {
    "BaseUrl": "http://cattlemanagement.api:8080"
  }
}
